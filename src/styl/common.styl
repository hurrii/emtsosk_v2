html {
	font-size: 10px
	line-height 1.42857
	font-family: 'PlayfairDisplay', sans-serif;
	height: 100%;
	scroll-behavior: smooth;
}

*, ::before, ::after {
		outline: none;
		-webkit-box-sizing: border-box;
		box-sizing: border-box;
}


body {
	font-size: 1.6rem;
	font-weight: normal;
	text-rendering: optimizeLegibility;
	-webkit-font-smoothing: antialiased;
	font-smoothing: antialiased;
	color: $darkgray;
	height: 100%;
	min-height: 100%;
}

.page
	visibility hidden

&::selection
	background $lblue
	color #fff

// Fluid typography
@media screen and (max-width: 767px) {
	html {
		font-size: calc(10px + 13 * (100vw - 320px) / 447);
	}
}

@media screen and (min-width: 768px) and (max-width: 1023px) {
	html {
		font-size: calc(10px + 4 * (100vw - 768px) / 255);
	}
}
@media (min-width: 1024px) and (max-width: 1220px) {
	html {
		font-size: calc(8px + 2 * (100vw - 1024px) / 336);
	}
}

@media (min-width: 1221px) and (max-width: 1440px) {
	html {
		font-size:10px
	}
}

@media (min-width: 1440px) {
	html {
		font-size: calc(10px + 2 * (100vw - 1600px) / 240)
	}
}

@media (min-width: 1900) {
	html {
		font-size: 18px;
	}
}

svg {
	width: 100%;
	height: 100%;
	display: block;
}

a:focus {
	outline: 0;
}

.container
	padding 0
	margin 0 auto
	@media $desktop
		width 108rem

.background-canvas
	position fixed
	top 0
	right 0
	width 40%
	height 100%
	opacity 0

	&--active
		transition opacity 10s linear
		opacity 1