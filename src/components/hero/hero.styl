.hero
	height calc(100% - 10rem)
	display flex
	align-items center
	flex-wrap wrap
	padding-bottom 10rem
	overflow hidden

	&__content
		position relative
		
		p
			opacity 0
			animation: 1.75s ease 2.5s changeOpacity forwards

		&::before
			content ''
			position absolute
			display block
			top 0
			left 0
			width 100%
			height 100%
			background $lblue
			z-index 2
			transform scaleX(0)
			animation: 1.75s ease-in-out 1.75s revealToRight forwards
