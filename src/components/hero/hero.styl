.hero
	height calc(100vh - 8rem)
	display flex
	align-items center
	flex-wrap wrap
	padding-bottom 8rem

	&__content
		overflow hidden
		position relative
		padding 0 10rem
		margin-left -10rem
		margin-right -10rem


	&__func
		.page--active &
			div
				opacity 0
				animation: .8s cubic-bezier(.455,.03,.515,.955) 2.1s revealToRightText forwards
		
		&--anim2
			.page--active &
				div
					animation-delay 2.7s

	&__org
	&__discover
		div
			font-size 2.1rem
			line-height 3.4rem
			letter-spacing 0.1rem
			font-family 'Lato', sans-serif
	
	&__org
		position relative
		text-transform uppercase
		font-weight bold
		max-width 22.5rem
		opacity 0

		.page--active &
			animation 1s ease 1.2s fadeInLeft forwards

		&::before
			content: ''
			display block
			position absolute
			width 3.5rem
			height 2px
			background $lblue
			top 50%
			transform translateY(-50%)
			right 0
			z-index 2
	
	
	&__func
		position relative
		font-size 6rem
		line-height 1.1
		padding: 0.5rem 0
		transform-origin 0 0

		&::before
			content ''
			position absolute
			display block
			top 0
			left 0
			width 100%
			height 100%
			background $lblue
			z-index 2
			transform translateX(0) scaleX(0)
			transform-origin 0 0

			.page--active &
				animation .6s cubic-bezier(.455,.03,.515,.955) 1.8s revealToRight forwards

		.page--active &
			&--anim2
				&::before
					animation-delay 2.45s

	&__discover
		margin-top 1rem
		user-select none

		&:hover
			cursor pointer
			button
				color $lblue_darker
				transform translateX(3px)
		
		div
			display flex
			align-items baseline
			opacity 0
			animation 1s ease 4.2s fadeInLeft forwards

	&__more
		border none
		background none
		padding .5rem
		transition transform .3s ease

		svg
			width 1.3rem
			height 1.3rem