.hero
	height calc(100% - 10rem)
	display flex
	align-items center
	flex-wrap wrap
	padding-bottom 10rem
	opacity 0
	animation: .75s ease-out 1.75s swap forwards

	p
		position relative
		overflow hidden

		&::before
			content ''
			position absolute
			display block
			top 0
			left 0
			width 100%
			height 100%
			background $lblue
			z-index 2
			animation: .75s ease 2.5s revealToRight forwards
