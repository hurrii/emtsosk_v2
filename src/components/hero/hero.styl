.hero
	height calc(100vh - 8rem)
	display flex
	align-items center
	flex-wrap wrap
	padding-bottom 8rem

	&__content
		overflow hidden
		position relative
		padding 0 2rem
		margin-left -2rem

	&__org
	&__line
	&__func
	&__discover
		opacity 0
		animation: .3s ease 2.5s revealToRight2 forwards
		z-index 1

	&__org
	&__discover
		font-size 2.1rem
		line-height 3.4rem
		letter-spacing 0.1rem
		font-family 'Lato', sans-serif
	
	&__org
		position relative
		text-transform uppercase
		font-weight bold
		max-width 24rem

		&::before
			content: ''
			display block
			position absolute
			width 3.5rem
			height 2px
			background $lblue
			top 50%
			transform translateY(-50%)
			right 0
			z-index 2
	
	&__line
		display: block
		width: 4rem
		height: 2px
		background: $lblue
		margin-left 1rem
	
	&__func
		font-size 6rem
		line-height 1.1
		padding: 0.5rem 0

		&::before
			content ''
			position absolute
			display block
			top 0
			left 0
			width 100%
			height 100%
			background $lblue
			z-index 2
			transform translateX(-100%)
			animation: 2.5s ease 0.1s revealToRight forwards
			opacity 1

		&--anim1
			&::before
				// animation-delay .6s

		&--anim2
			&::before
				animation-delay .5s

	&__discover
		margin-top 1rem

