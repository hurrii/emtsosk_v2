.page--contacts
	.background-canvas
		width 25%

.contacts
	padding-top 8rem

	&__mail-us
		position relative
		padding-right 8.3333333%

	&__divider
	&__mail-us
	&__info
		opacity 0
		.page--active &
			animation 1.2s ease .3s fadeInUp forwards
	&__info
		.page--active &
			animation-delay .6s
	
	&__description
		margin-top 2.4rem
		font-family 'Lato', sans-serif
		font-size 1.9rem
		line-height 2.5rem
	
	
	&__form
		display flex
		flex-wrap wrap
		margin-top 4rem
		font-family 'Lato', sans-serif


		input
			&:not(:first-of-type)
				margin-top 2.4rem

		button
		textarea
			margin-top 2.4rem

		input
		textarea
			width 100%
			padding 0.8rem 1.6rem
			border 1px solid $lightgray_lighter

			&:focus
				&::placeholder
					color transparent
	
	&__send-form
		position relative
		background none
		text-transform uppercase
		padding 2rem 2.4rem
		min-width 10rem
		text-align center
		margin-left auto
		border 1px solid $lightgray_lighter
		border-radius 2.5rem
		font-weight bold
		letter-spacing: .1rem
		cursor pointer

		&:hover
			svg
				transition transform 0.2s ease
				transform translateX(1rem)

	&__send-icon
	&__send-text
		display inline-block
		vertical-align middle
		svg
			width 2.5rem
			height 2.5rem
	
	&__info
		padding-left 8.3333333%
	
	&__divider
		position absolute
		top 1.5rem
		right 0
		display block
		width 1px
		height 100%
		background $lightgray_lighter